@model IEnumerable<MVCNET6.Data.vwLatestEmployeeStartDates>

<div>
    <form method="get">
    <label>Start Date Sort Direction:</label>
    <select name="SortDirection">
        <option>Ascending</option>
        <option>Descending</option>
    </select>
        <div>
            <input type="submit"/>
        </div>
    </form>
</div>
<table>
    <tr>
        <th>Employee</th>
        <th>Start Date</th>
    </tr>
    @foreach (var employee in Model)
    {
        <tr>
            <td><a asp-action="EmployeeDetail" asp-controller="Home" asp-route-id="@employee.Id">@employee.Name</a></td>
            <td>@employee.StartDate.ToString("MM/dd/yyyy hh:mm A")</td>
        </tr>
    }
</table>